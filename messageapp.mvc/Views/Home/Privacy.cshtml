@*
<h1>@ViewData["Title"]</h1>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            overflow: hidden;
        }

        .container-fluid {
            height: 100%;
        }

        /* Sidebar */
        .sidebar {
            background: linear-gradient(180deg, #00a884 0%, #008069 100%);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            background: #008069;
            color: white;
            padding: 20px;
        }

            .sidebar-header h5 {
                margin: 0;
            }

        .search-box {
            padding: 10px;
            background: #f0f2f5;
        }

            .search-box input {
                width: 100%;
                padding: 10px 15px;
                border: none;
                border-radius: 20px;
                background: white;
            }

        .chat-list {
            flex: 1;
            overflow-y: auto;
            background: white;
        }

        .chat-item {
            display: flex;
            align-items: center;
            padding: 15px;
            cursor: pointer;
            border-bottom: 1px solid #f0f2f5;
            transition: background 0.2s;
        }

            .chat-item:hover, .chat-item.active {
                background: #f5f6f6;
            }

        .chat-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
        }

        .chat-info {
            flex: 1;
        }

        .chat-name {
            font-weight: 600;
            color: #111;
        }

        .chat-last {
            font-size: 14px;
            color: #667781;
        }

        .chat-time {
            font-size: 12px;
            color: #667781;
        }

        .unread {
            background: #25d366;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }

        /* Chat Area */
        .chat-area {
            background: #efeae2;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .chat-header {
            background: #f0f2f5;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            border-bottom: 1px solid #d1d7db;
        }

            .chat-header img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 15px;
            }

        .chat-messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><rect fill="%23efeae2" width="100" height="100"/></svg>');
        }

        .message {
            max-width: 60%;
            margin-bottom: 15px;
            padding: 8px 12px;
            border-radius: 8px;
            position: relative;
        }

        .message-sent {
            background: #d9fdd3;
            margin-left: auto;
            float: right;
            clear: both;
        }

        .message-received {
            background: white;
            float: left;
            clear: both;
        }

        .message-time {
            font-size: 11px;
            color: #667781;
            margin-top: 5px;
            text-align: right;
        }

        .chat-input {
            background: #f0f2f5;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .chat-input input {
                flex: 1;
                padding: 12px 15px;
                border: none;
                border-radius: 25px;
                background: white;
            }

            .chat-input button {
                background: #25d366;
                color: white;
                border: none;
                border-radius: 50%;
                width: 45px;
                height: 45px;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
            }

                .chat-input button:hover {
                    background: #20bd5f;
                }

        .icon-btn {
            background: none;
            border: none;
            color: #54656f;
            font-size: 18px;
            cursor: pointer;
            padding: 5px 10px;
        }

            .icon-btn:hover {
                color: #111;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row h-100">
            <!-- Sidebar -->
            <div class="col-md-4 px-0 sidebar">
                <div class="sidebar-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5><i class="fab fa-whatsapp"></i> Chats</h5>
                        <div>
                            <button class="icon-btn text-white"><i class="fas fa-ellipsis-v"></i></button>
                        </div>
                    </div>
                </div>

                <div class="search-box">
                    <input type="text" id="searchChat" placeholder="Search or start new chat">
                </div>

                <div class="chat-list" id="chatList"></div>
            </div>

            <!-- Chat Area -->
            <div class="col-md-8 px-0 chat-area">
                <div class="chat-header">
                    <img src="https://i.pravatar.cc/150?img=1" alt="User" id="chatAvatar">
                    <div class="flex-grow-1">
                        <div class="fw-bold" id="chatName">Select a chat</div>
                        <small class="text-muted" id="chatStatus">Click on a conversation to start</small>
                    </div>
                    <div>
                        <button class="icon-btn"><i class="fas fa-search"></i></button>
                        <button class="icon-btn"><i class="fas fa-ellipsis-v"></i></button>
                    </div>
                </div>

                <div class="chat-messages" id="chatMessages">
                    <div class="text-center text-muted mt-5">
                        <i class="fas fa-comments" style="font-size: 80px; opacity: 0.2;"></i>
                        <h5 class="mt-3">Welcome to Chat Dashboard</h5>
                        <p>Select a conversation to start messaging</p>
                    </div>
                </div>

                <div class="chat-input">
                    <button class="icon-btn"><i class="far fa-smile"></i></button>
                    <button class="icon-btn"><i class="fas fa-paperclip"></i></button>
                    <input type="text" id="messageInput" placeholder="Type a message">
                    <button id="sendBtn"><i class="fas fa-paper-plane"></i></button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/userauth/userdashboard.js"></script>
</body>
</html> *@
